    },
    "open-bookmark-new-10": {
      "suggested_key": {
        "default": "Alt+Shift+0",
        "linux": "Ctrl+Shift+0"
      },
      "description": "Open Bookmark New 10"
    }
  },
  
  "options_ui": {
    "page": "options/options.html"
  },
  
  "permissions": [
    "tabs",
    "bookmarks",
    "storage",
    "<all_urls>"
  ]
}
