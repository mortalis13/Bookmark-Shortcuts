{
  "name": "Bookmark Shortcuts",
  "version": "1.2.0",
  "description": "Adds shortcuts for Bookmark Toolbar to open bookmarks with the keyboard",
  
  "manifest_version": 2,
  "background": {
    "scripts": ["utils.js", "main.js"]
  },

  "commands": {
    "open-bookmark-1": {
      "suggested_key": {
        "default": "Alt+1",
        "linux": "Ctrl+1"
      },
      "description": "Open Bookmark 1"
    },
    "open-bookmark-2": {
      "suggested_key": {
        "default": "Alt+2",
        "linux": "Ctrl+2"
      },
      "description": "Open Bookmark 2"
    },
    "open-bookmark-3": {
      "suggested_key": {
        "default": "Alt+3",
        "linux": "Ctrl+3"
      },
      "description": "Open Bookmark 3"
    },
    "open-bookmark-4": {
      "suggested_key": {
        "default": "Alt+4",
        "linux": "Ctrl+4"
      },
      "description": "Open Bookmark 4"
    },
    "open-bookmark-5": {
      "suggested_key": {
        "default": "Alt+5",
        "linux": "Ctrl+5"
      },
      "description": "Open Bookmark 5"
    },
    "open-bookmark-6": {
      "suggested_key": {
        "default": "Alt+6",
        "linux": "Ctrl+6"
      },
      "description": "Open Bookmark 6"
    },
    "open-bookmark-7": {
      "suggested_key": {
        "default": "Alt+7",
        "linux": "Ctrl+7"
      },
      "description": "Open Bookmark 7"
    },
    "open-bookmark-8": {
      "suggested_key": {
        "default": "Alt+8",
        "linux": "Ctrl+8"
      },
      "description": "Open Bookmark 8"
    },
    "open-bookmark-9": {
      "suggested_key": {
        "default": "Alt+9",
        "linux": "Ctrl+9"
      },
      "description": "Open Bookmark 9"
    },
    "open-bookmark-10": {
      "suggested_key": {
        "default": "Alt+0",
        "linux": "Ctrl+0"
      },
      "description": "Open Bookmark 10"
    },
    
    "open-bookmark-new-1": {
      "suggested_key": {
        "default": "Alt+Shift+1",
        "linux": "Ctrl+Shift+1"
      },
      "description": "Open Bookmark New 1"
    },
    "open-bookmark-new-2": {
      "suggested_key": {
        "default": "Alt+Shift+2",
        "linux": "Ctrl+Shift+2"
