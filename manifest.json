    "open-bookmark-new-3": {
      "suggested_key": {
        "default": "Alt+Shift+3",
        "linux": "Ctrl+Shift+3"
      },
      "description": "Open Bookmark New 3"
    },
    "open-bookmark-new-4": {
      "suggested_key": {
        "default": "Alt+Shift+4",
        "linux": "Ctrl+Shift+4"
      },
      "description": "Open Bookmark New 4"
    },
    "open-bookmark-new-5": {
      "suggested_key": {
        "default": "Alt+Shift+5",
        "linux": "Ctrl+Shift+5"
      },
      "description": "Open Bookmark New 5"
    },
    "open-bookmark-new-6": {
      "suggested_key": {
        "default": "Alt+Shift+6",
        "linux": "Ctrl+Shift+6"
      },
      "description": "Open Bookmark New 6"
